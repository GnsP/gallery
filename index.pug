mixin card (entry)
    .card
        img(src=entry.file, alt=entry.name)
        h3= entry.name
        h4= entry.year
        ul.tags
            each tag in entry.tags
                li= tag
        
doctype html
html
    head
        title Gallery | gnsp.in
        meta(name='viewport' content='initial-scale=1.0')
        style(type='text/css').
            .container { padding: 40px; margin: 0 auto; }
            .grid { display: flex; justify-content: center; flex-wrap: wrap; }
            .card { display: block; padding: 20px; box-shadow: 0 0 10px #0004; border-radius: 8px; width: 400px; margin: 20px; }
            img { border: 1px #cacaca solid; width: 100% }
            body { font-family: sans-serif; line-height: 1.618; color: #2b2b2b; }
            h1 { text-align: center; }
            h3, h4 { margin: 0.31em 0; }
            ul.tags{ list-style-type: none; padding: 0; } 
            ul.tags li { display: inline-block; padding: 2px 10px; background: yellow; border-radius: 8px; margin-right: 10px; }
            @media screen and (max-width: 720px) { .container { padding: 0; } .card {margin: 10px; } }

    body.container
        h1 Gallery
        .grid
            each entry in entries
                div 
                    +card (entry)
